generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum ProductType {
  WEIGHT
  BUNCH
  PIECE
}

enum WeightUnit {
  G
  KG
  ML
  CL
  L
}

model User {
  id        String     @id @default(uuid())
  userId    String //Id from clerk
  purchases Purchase[]
}

model Product {
  id          String        @id @default(uuid())
  type        String        @unique
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  Price       Price[]
  Purchase    Purchase[]
  receiptText ReceiptText[]
}

model Produce {
  id          String        @id @default(uuid())
  type        String        @unique
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  category    String
  upc         String        @unique
  brand       String?
  weight      Int           @default(0)
  Price       Price[]
  Purchase    Purchase[]
  receiptText ReceiptText[]
}

model ReceiptText {
  id        String   @id @default(uuid())
  text      String   @unique
  store     Store    @relation(fields: [storeId], references: [id])
  storeId   String
  Produce   Produce? @relation(fields: [produceId], references: [id])
  produceId String?
  Product   Product? @relation(fields: [productId], references: [id])
  productId String?

  @@index([storeId])
  @@index([produceId])
  @@index([productId])
}

//this is entering a receipt
model Purchase {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  produce   Produce[]
  product   Product[]
  store     Store     @relation(fields: [storeId], references: [id])
  storeId   String
  User      User      @relation(fields: [userId], references: [id])
  userId    String

  //TODO add receipt images

  @@index([storeId])
  @@index([userId])
}

model Price {
  id        String   @id @default(uuid())
  price     Int
  onSale    Boolean
  fromStore Store    @relation(fields: [storeId], references: [id])
  storeId   String
  produce   Produce? @relation(fields: [produceId], references: [id])
  produceId String?
  Product   Product? @relation(fields: [productId], references: [id])
  productId String?

  @@index([storeId])
  @@index([produceId])
  @@index([productId])
}

model Store {
  id                 String        @id @default(uuid())
  name               String
  location           String
  address            Json
  lat                Int?
  long               Int?
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  purchasesFromStore Purchase[]
  ReceiptText        ReceiptText[]
  Price              Price[]
}
